<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- BootStrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

  <!-- jQuery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

  <style>
    /* * {
      box-sizing: border-box;
    } */

    body {
      font-family: Roboto, verdana;
      margin: auto;
      text-align: center;
    }

    .topnav {
      overflow: hidden;
      background-color: #333;
    }

    .topnav a {
      float: left;
      display: block;
      color: #f2f2f2;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
    }

    .topnav a:hover {
      background-color: #ddd;
      color: black;
    }

    /* Class for currently selected navigation item  */
    .curnav {
      background-color: #777;
    }

    .leftcolumn {
      width: 60%;
      margin: auto;
    }

    .card {
      background-color: white;
      padding: 20px;
    }

    #startSearchBox, #endSearchBox {
      width: 96%;
    }

    /* Clear floats after the columns */
    /* .row:after {
      content: "";
      display: table;
      clear: both;
    } */

    /* Footer */
    /* .footer {
      padding: 20px;
      text-align: center;
      background: #ddd;
      margin-top: 20px;
    } */

    table {
      border-collapse: collapse;
      width: 100%;
    }

    th,
    td {
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #f2f2f2
    }

    th {
      background-color: #333;
      color: white;
    }

    @media screen and (max-width: 800px) {
      .leftcolumn {
        width: 100%;
        padding: 0;
      }

      #logo {
        width: 400px;
      }
    }

    @media screen and (max-width: 400px) {
      .topnav a {
        float: none;
        width: 100%;
      }
    }

    input[type=radio] {
      display: none;
    }

    input[type=radio]+img {
      opacity: 0.4;
    }

    input[type=radio]+img:hover {
      opacity: 0.6;
      cursor: pointer;
    }

    input[type=radio]+img:active {
      opacity: 0.4;
      cursor: pointer;
    }

    input[type=radio]:checked+img {
      border-radius: 25px;
      border: 2px solid green;
      opacity: 1.0;
    }

    input[type=text]:valid, input[type=password]:valid, input[type=email]:valid {
      border: 2px solid green;
    }

  </style>
  <title>Truepool Carpool</title>
</head>

<body>

  <div class="header">
    <a href="/"><img id="logo" src="./views/logo.gif" /></a>
  </div>
